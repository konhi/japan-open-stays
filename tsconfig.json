{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["apps/**/*", "packages/**/*", "infrastructure/**/*"],
  "exclude": ["node_modules", "**/node_modules", "**/dist", "**/build"]
}
